<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AulfahProject_Asma</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Footer.css">
    <link rel="stylesheet" href="~/css/Cart.css">
    <link rel="stylesheet" href="~/css/DashBoard.css">
    @* <link rel="stylesheet" href="~/css/Signin.css"> *@
    <link rel="stylesheet" href="~/css/Signup.css"> 
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AulfahProject_Asma.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

</head>
<body>
    <header>
        <nav class="headnavbar">

            <div class="col justify-content-end mx-auto my-auto ">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Aulfah</a>
            </div>
            <div class="col col-8 my-auto">
                <form class=" form-inputs ">
                    <input type="search" title="search" class="form-control rounded-pill searchfrorm" />
                    <i class="bi bi-search "></i>

                </form>
            </div>
            <div class="col">
                <ul class="navbar-nav flex-grow-1 list-group-horizontal justify-content-end">
                    <li class="nav-item mx-auto my-auto">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Registeration" asp-action="Signin">
                            <i class="bi bi-heart-fill iconNav"></i>
                        </a>
                    </li>
                    <li class="nav-item mx-auto my-auto">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Cart" asp-action="Index">
                            <i class="bi bi-cart-fill iconNav"></i>
                        </a>
                    </li>
                    <li class="nav-item mx-auto my-auto">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Registeration" asp-action="Signup">
                            <i class="bi bi-three-dots iconNav"></i>
                        </a>
                    </li>
                    <li class="nav-item mx-auto my-auto">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Artist" asp-action="Home">
                            <i class="bi bi-person-circle iconAccount"></i>
                        </a>
                    </li>
                </ul>
            </div>

        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
    <footer>

        <div class="footerContant">
            <div class="iconSocial">
                <a href="https://www.linkedin.com/in/shaima-alariemi-3a7a70228/">
                    <i class="fa-brands fa-linkedin"></i>
                </a>
                <a href="https://www.linkedin.com/in/shaima-alariemi-3a7a70228/">
                    <i class="fa-brands fa-instagram"></i>
                </a>
            </div>

            <div class="contact_Phone_Email">

                <div class="box">
                    <i class="fa-sharp fa-solid fa-phone-flip fa-rotate-180"></i>
                    <p>+968 99887766</p>
                </div>

                <div class="box">
                    <i class="fa-solid fa-envelope"></i>
                    <a href="https://www.linkedin.com/in/shaima-alariemi-3a7a70228/">
                        <p>Aulfah@gmail.com</p>
                    </a>

                </div>
            </div>

            <div class="help">
               
                    <form>
                        <h5> <i class="bi bi-question-circle-fill"></i> Need Help?</h5>
                        <div class="d-flex flex-column flex-sm-row w-100 gap-2">
                            <label for="newsletter1" class="visually-hidden">Email address</label>
                            <input id="newsletter1" type="text" class="form-control" placeholder="Enter your question here">
                            <button class="btn btn-primary w-25" id="button" type="button">Send</button>
                        </div>
                    </form>
                </div>
            </div>

       
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
