@model Aulfah.DAL.Model.Category

<h1>Delete Category</h1>

<div>
    <h4>Are you sure you want to delete this category?</h4>
    <h4>Id: @Model.CategoryID</h4>
    <h4>Name: @Model.Name</h4>
    <h4>Image: @Model.CategoryImage</h4>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="CategoryID" />
    <button type="submit" class="btn btn-danger">Delete</button> | <a asp-action="Index">Cancel</a>
</form>
