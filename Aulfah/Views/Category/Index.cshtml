@model IEnumerable<Aulfah.DAL.Model.Category>

<h1>Category Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Image</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryID</td>
                <td>@category.Name</td>
                <td>@category.CategoryImage</td>
                <td>
                    <a asp-action="Details" asp-route-id="@category.CategoryID">Details</a> |
                    <a asp-action="Update" asp-route-id="@category.CategoryID">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@category.CategoryID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create">Create New</a>
